@page
@model PizzaLaMejor.App.Presentacion.Pages.RegistrarProductoModel
@{
}

<br>

<h2 class="text-warning">Crear Producto</h2>
    <style>
        body {
            background-color: rgb(234, 237, 237);
        }
    </style>

<div class="border">
    <form method="post">
        <div class="container" style="padding: 30px">

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="producto.Categoria"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="producto.Categoria" class="form-control">
                    </div>
                    <span asp-validacion-for="producto.Categoria" class="tex-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="producto.Precio"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="producto.Precio" class="form-control">
                    </div>
                    <span asp-validacion-for="producto.Precio" class="tex-danger"></span>
                </div>
            </div>
        
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="producto.Ingredientes"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="producto.Ingredientes" class="form-control">
                    </div>
                    <span asp-validacion-for="producto.Ingredientes" class="tex-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <input type="submit" value="Crear" class="btn btn-warning form-control">
                    </div>
                    <div class="col-sm-4">
                        <a asp-page="/Index" class="btn btn-dark form-control">Volver</a>
                    </div>
                </div>
            </div>
</div>


</form>
</div>